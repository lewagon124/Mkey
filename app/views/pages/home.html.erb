  <div class="container p-5">
    <h1 class="text-center p-4">
      What is trending</h1>
    <div class="row">
      <% @recipes.each do |recipe| %>
        <div class="col-md-4 recipe-card">
          <div class="card mb-2">
            <div class="recipe-video-wrapper">
              <div class="recipe-video-container">
                <img class="card-img-top" src="<%= recipe.image %>" alt="Card image cap">
                <video autoplay="autoplay" muted="muted" loop="loop" poster="<%= recipe.image %>" id="recipe-video">
                  <source src="<%= recipe.video %>" type="video/mp4">
                </video>
              </div>
            </div>
            <a href="/recipes/<%= recipe.id %>">
              <div class="card-body">
                <h4 class="card-title"><%= recipe.name %></h4>
                <div class="d-flex justify-content-between align-items-end">
                  <div class="card-left">
                    <p class="card-text"><%= recipe.desc %></p>
                  </div>
                  <div class="card-right">
                    <h5 class="price">$4/serving</h5>
                  </div>
                </div>
              </div>
            </a>
          </div>
        </div>
      <% end %>
    </div>
  </div>

