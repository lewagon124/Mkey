
<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= form_tag(search_path, class: "searchform") do %>
  <form class="form-inline md-form form-sm active-pink active-pink-2 mt-2">
    <i class="fa fa-search" aria-hidden="true"></i>
    <input class="form-control form-control-sm w-75" id="search-bar" type="text" placeholder="ðŸ¥‘Avocado Toast" name="search" aria-label="Search" onfocus="this.placeholder=''" onblur="this.placeholder='search me again!'">
  </form>
<% end %>

<button class="navbar-toggler button" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
  <span class="navbar-toggler-icon"></span>
</button>
<div>
  <%= link_to image_tag("logo/mokeylogo.png"), root_path, class: "nav-logo" %>
</div>


<div class="collapse navbar-collapse" id="navbarSupportedContent">
  <ul class="navbar-nav mr-auto">
    <% if user_signed_in? %>

    <!-- Shopping Cart -->
    <div>
        <li class="nav-item item shopping-cart">
          <% cart_count = current_user.current_cart.cartitems.reduce(0) { |sum, num| sum + num.quantity } %>

          <%= link_to cart_path(current_user.current_cart), class: "nav-link" do %>
            <% if cart_count > 0 %>
              <div class="my-badge"><%= cart_count %></div>
              <i class="fa fa-shopping-cart icon-white"></i>
            <% else %>
              <i class="fa fa-shopping-cart icon-white"></i>
            <% end %>
            <% end %>
        </li>
    </div>

      <li class="nav-item dropdown">
        <%= image_tag "martin.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <%= link_to "Profile", edit_user_registration_path, class: "dropdown-item" %>
          <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
        </div>
      </li>


    <% else %>
      <div id="login-btn"> Login/Sign Up </div>
    <% end %>
  </ul>
</div>
</div>
