<section class="about">

  <div class="about-title">

    <video autoplay="autoplay" loop="loop" controls="controls" muted="muted" id="video" class="video-fluid z-depth-1">
      <source src="<%= @recipe.video %>" type="video/mp4" class="recipe-video">
    </video>
    <!-- <img src=" <%= @recipe.image %> " alt=""> -->
  </div>

  <div class="about-pages">
    <h1 class="recipe-name recipe-page-title"><%= @recipe.name %></h1>
    <div class="text1">
      <h4 class="ingredient recipe-page-title">Select what you need:</h4>
      <div class="ingredient-container">
        <%= render 'cartitems/form' %>
      </div>
      <div class="ingredient-name-container">
        <h4 class="prep">
          Cook-time:
          <%=@recipe.prep_time%>
          mins
        </h4>

        <ol class="item-ingredient">
          <% @recipe.ingredients.each do |ingredient| %>
            <li>-
              <%= ingredient.quantity%>
              <%= ingredient.item.name%>
            </li>

          <% end %>
        </ol>
      </div>
    </div>

    <hr>
    <div class="text2">
      <h4 class="ingredient recipe-page-title">Preparation</h4>
      <ol class="directions">
        <% @recipe.steps.each do |step| %>
          <li><%= step.number%>
            -
            <%= step.content%>
          </li>
        <% end %>
      </ol>
    </div>

    <div>
      <div class="check">
        <%= link_to "Shopping Cart", cart_path(current_user.current_cart), class: "checkout"%>
      </div>
    </div>
